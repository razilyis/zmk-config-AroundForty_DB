#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/zmk/input_transform.h>
#include <dt-bindings/input/input-event-codes.h>
#include <dt-bindings/zmk/bt.h>
#include <input/processors.dtsi>
#include <physical_layouts.dtsi>

/ {
    chosen {
       zmk,physical-layout = &aroundFortydb_physical_layout;
    };

aroundFortydb_physical_layout: aroundFortydb_physical_layout {
        compatible = "zmk,physical-layout";
        display-name = "Default";
        transform = <&default_transform>;
        kscan = <&kscan0>;

         keys
            = <&key_physical_attrs 100 100    0  100  0 0 0>  /* r1 c0 (0,1)  */
            , <&key_physical_attrs 100 100  100  100  0 0 0>  /* r1 c1 (1,1)  */
            , <&key_physical_attrs 100 100  200  100  0 0 0>  /* r1 c2 (2,1)  */
            , <&key_physical_attrs 100 100  300  100  0 0 0>  /* r1 c3 (3,1)  */
            , <&key_physical_attrs 100 100  400  100  0 0 0>  /* r1 c4 (4,1)  */
            , <&key_physical_attrs 100 100  800  100  0 0 0>  /* r1 c5 (8,1)  */
            , <&key_physical_attrs 100 100  900  100  0 0 0>  /* r1 c6 (9,1)  */
            , <&key_physical_attrs 100 100 1000  100  0 0 0>  /* r1 c7 (10,1) */
            , <&key_physical_attrs 100 100 1100  100  0 0 0>  /* r1 c8 (11,1) */
            , <&key_physical_attrs 100 100 1200  100  0 0 0>  /* r1 c9 (12,1) */

            , <&key_physical_attrs 100 100    0  200  0 0 0>  /* r2 c0 (0,2)  */
            , <&key_physical_attrs 100 100  100  200  0 0 0>  /* r2 c1 (1,2)  */
            , <&key_physical_attrs 100 100  200  200  0 0 0>  /* r2 c2 (2,2)  */
            , <&key_physical_attrs 100 100  300  200  0 0 0>  /* r2 c3 (3,2)  */
            , <&key_physical_attrs 100 100  400  200  0 0 0>  /* r2 c4 (4,2)  */
            , <&key_physical_attrs 100 100  800  200  0 0 0>  /* r2 c5 (8,2)  */
            , <&key_physical_attrs 100 100  900  200  0 0 0>  /* r2 c6 (9,2)  */
            , <&key_physical_attrs 100 100 1000  200  0 0 0>  /* r2 c7 (10,2) */
            , <&key_physical_attrs 100 100 1100  200  0 0 0>  /* r2 c8 (11,2) */
            , <&key_physical_attrs 100 100 1200  200  0 0 0>  /* r2 c9 (12,2) */

            , <&key_physical_attrs 100 100    0  300  0 0 0>  /* r3 c0 (0,3)  */
            , <&key_physical_attrs 100 100  100  300  0 0 0>  /* r3 c1 (1,3)  */
            , <&key_physical_attrs 100 100  200  300  0 0 0>  /* r3 c2 (2,3)  */
            , <&key_physical_attrs 100 100  300  300  0 0 0>  /* r3 c3 (3,3)  */
            , <&key_physical_attrs 100 100  400  300  0 0 0>  /* r3 c4 (4,3)  */
            , <&key_physical_attrs 100 100  800  300  0 0 0>  /* r3 c5 (8,3)  */
            , <&key_physical_attrs 100 100  900  300  0 0 0>  /* r3 c6 (9,3)  */
            , <&key_physical_attrs 100 100 1000  300  0 0 0>  /* r3 c7 (10,3) */
            , <&key_physical_attrs 100 100 1100  300  0 0 0>  /* r3 c8 (11,3) */
            , <&key_physical_attrs 100 100 1200  300  0 0 0>  /* r3 c9 (12,3) */

            , <&key_physical_attrs 100 100    0  400  0 0 0>  /* r4 c0 (0,4)  */
            , <&key_physical_attrs 100 100  100  400  0 0 0>  /* r4 c1 (1,4)  */
            , <&key_physical_attrs 100 100  500  300  0 0 0>  /* r4 c2 (5,3)  */
            , <&key_physical_attrs 100 100  500  400  0 0 0>  /* r4 c3 (5,4)  */
            , <&key_physical_attrs 100 100  400  400  0 0 0>  /* r4 c4 (4,4)  */

            , <&key_physical_attrs 100 100 1100  400  0 0 0>  /* r4 c5 (11,4) */
            , <&key_physical_attrs 100 100  700  400  0 0 0>  /* r4 c6 (7,4)  */
            , <&key_physical_attrs 100 100  700  300  0 0 0>  /* r4 c7 (7,3)  */
            , <&key_physical_attrs 100 100  800  400  0 0 0>  /* r4 c8 (8,4)  */
            , <&key_physical_attrs 100 100 1200  400  0 0 0>  /* r4 c9 (12,4) */
            ;
    };

    split_inputs {
          #address-cells = <1>;
          #size-cells = <0>;
    
          trackball_split_L: trackball_split_L@0 {
            compatible = "zmk,input-split";
            reg = <0>;
          };
        };
    
    trackball_listener_L: trackball_listener_L {
          compatible = "zmk,input-listener";
          status = "disabled";
          device = <&trackball_split_L>;
    
          input-processors = <&zip_xy_transform (INPUT_TRANSFORM_Y_INVERT)>,
                               <&zip_xy_scaler 1 16>,
                               <&zip_scroll_scaler 1 5>,
                               <&zip_xy_to_scroll_mapper>;
    };

    trackball_listener_R: trackball_listener_R {
      compatible = "zmk,input-listener";
      status = "disabled";    
    };


    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;               
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)                RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)                RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)                RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)                RC(3,5) RC(3,7) RC(3,6) RC(3,8) RC(3,9)         
        >;
    };
    
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";
            row-gpios
                = <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
                , <&xiao_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
                , <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
                , <&xiao_d 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 			
                ;
    };
};
